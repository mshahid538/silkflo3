@model SilkFlo.Web.ViewModels.Shop.Subscribe


<div class="container">
    <img class="brand"
         onclick="SilkFlo.Redirect ( '/' )"
         src="~/Icons/Logo and SilkFlo Coloured and Black.svg"
         style="width: 200px; margin-top: calc(20px - 0.5rem) !important;"/>
    <h2 style="margin-top: 1rem;">Sign up now to start your 30 Day Free Trial.</h2>
</div>


<div id="subscribe" style="margin-top: 1rem;">
    <div style="overflow-y: auto;">
        <div class="modal-body"
             style="padding-top: 0;">

        @* Body *@
        <div class="container"
                 style="margin-bottom: 3rem;">
                <div class="row">

                    @* Wizard *@
                    <div class="col-lg-7">

                        <div class="card mb-3">

                            <div class="card-body">
                                <fieldset name="Account.SignUp.Fieldset">

                                    @await Html.PartialAsync("../Shared/Shop/Subscription/_BillingAddress", Model)

                                    @{
                                        var buttonName = "";
                                    } 

                                    @if (Model.IsSignedIn)
                                    {
                                        buttonName += "BillingAddressContinue";
                                    }
                                    else
                                    {
                                        buttonName += "AccountDetailsContinue";
                                    }
                                    
                                    <div class="d-flex justify-content-between vertical-center"
                                         style="margin-top: 1rem;">
                                        <div name="Message"></div>
                                        <button class="btn btn-brand"
                                                name="@Html.Raw(buttonName)"
                                                onclick="SilkFlo.ViewModels.Subscribe.FreeTrial.Click ( event );"
                                                type="button">Get Free Trial</button>
                                    </div>

                                </fieldset>
                                </div>@* card-body END *@


                            </div>@* Card END*@

                        </div>

                        <input name="Account.SignUp.ClientId"
                               type="hidden"
                               value="@Model.ClientId"/>
                    </div>
                </div>
            </div>
        </div>
    </div>


@* Terms Modal *@
<div aria-hidden="true"
     aria-labelledby="Terms of Use"
     class="fade modal"
     data-bs-backdrop="static"
     data-bs-keyboard="false"
     id="ModalTerms"
     tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Terms of Use</h4>
                <button aria-label="Close"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        silkflo-action="Cancel"
                        type="button">
                </button>
            </div>

            <div class="modal-body">@Html.Raw(Model.Terms)</div>


            <div class="modal-footer"
                 style="justify-content: end;">
                <button class="btn btn-brand"
                        data-bs-dismiss="modal"
                        type="button">Close</button>
            </div>
        </div>
    </div>
</div>
