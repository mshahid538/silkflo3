@model SilkFlo.Web.Services.Models.Account.SignUpConfirmation

<div class="container">
    <h2>Sign Up Email Confirmation Sent</h2>
    <p>Registration email sent to @Model.Email. Open this email and click on the link to finish the sign up.</p>
    <p>If you do not see this email in your inbox within 15 minutes, look for it in your junk mail folder. If you find it there, please mark the email as "Not Junk".</p>
    <form>
         <!-- Buttons -->
        <button formaction="/account/SignUpConfirmation?returnURL=@Model.ReturnURL" 
                formmethod="post"
                type="submit"
                class="btn btn-secondary">Return To Previous Screen</button>
    </form>
</div>