@model SilkFlo.Web.Models.Summary<SilkFlo.Web.Models.Shared.Period>
    <div class="container">
        <div class="TitleBar">
            <h2>Periods Summary</h2>
            <div class="grid_1fr_auto">
                <p>@Html.ActionLink("Create New", "Edit", null)</p>
                <p class="text-info">Count: @Model.Count</p>
            </div>
        </div>
        <div class="table-responsive">
            <table id="table_id"
                   style="display: none;"
                   delaney-ui-grid
                   delaney-ui-bottom="50px"
                   delaney-ui-grid-sticky-column="0"
                   class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:1px; white-space: nowrap;"></th>
                        <th>Id</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.NamePlural)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.MonthCount)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.Sort)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.CancelPeriodInDay)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.CancelPeriodInDayNoRenew)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Models != null)
                    {
                        @foreach (var item in Model.Models)
                        {
                    <tr>
                        <td style="width:1px; white-space: nowrap;">
                                @{
                                    string linkEdit = "/Administration/Shared/Period/Edit/" + item.Id;
                                    string linkDelete = "/Administration/Shared/Period/Delete/" + item.Id;
                                }
                                <a href="@linkEdit"
                                   asp-authorize
                                   asp-policy="Administrator">Edit</a>
                                @if (item.IsDeleted) 
                                { 
                                <span class="text-muted">Is Deleted</span>
                                }
                                else
                                {
                                <a href="@linkDelete"
                                   asp-authorize
                                   asp-policy="Administrator">Delete</a>
                                }
 
                        </td>
                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.Id)"><span class="text-muted">@Html.Raw(item.Id)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.Id)"><span>@Html.Raw(item.Id)</span></td>
                        }
                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.Name)"><span class="text-muted">@Html.Raw(item.Name)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.Name)"><span>@Html.Raw(item.Name)</span></td>
                        }

                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.NamePlural)"><span class="text-muted">@Html.Raw(item.NamePlural)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.NamePlural)"><span>@Html.Raw(item.NamePlural)</span></td>
                        }

                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.MonthCount)"><span class="text-muted">@Html.DisplayFor(modelItem => item.MonthCount)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.MonthCount)"><span>@Html.DisplayFor(modelItem => item.MonthCount)</span></td>
                        }

                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.Sort)"><span class="text-muted">@Html.DisplayFor(modelItem => item.Sort)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.Sort)"><span>@Html.DisplayFor(modelItem => item.Sort)</span></td>
                        }

                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.CancelPeriodInDay)"><span class="text-muted">@Html.DisplayFor(modelItem => item.CancelPeriodInDay)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.CancelPeriodInDay)"><span>@Html.DisplayFor(modelItem => item.CancelPeriodInDay)</span></td>
                        }

                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.CancelPeriodInDayNoRenew)"><span class="text-muted">@Html.DisplayFor(modelItem => item.CancelPeriodInDayNoRenew)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.CancelPeriodInDayNoRenew)"><span>@Html.DisplayFor(modelItem => item.CancelPeriodInDayNoRenew)</span></td>
                        }
                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    @if (!ViewContext.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    }
    </div>