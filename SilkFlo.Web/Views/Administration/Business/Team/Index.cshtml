@model SilkFlo.Web.Models.Summary<SilkFlo.Web.Models.Business.Team>
    <div class="container">
        <div class="TitleBar">
            <h2>Business Areas Summary</h2>
            <div class="grid_1fr_auto">
                <p>@Html.ActionLink("Create New", "Edit", null)</p>
                <p class="text-info">Count: @Model.Count</p>
            </div>
        </div>
        <div class="table-responsive">
            <table id="table_id"
                   style="display: none;"
                   delaney-ui-grid
                   delaney-ui-bottom="50px"
                   delaney-ui-grid-sticky-column="0"
                   class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:1px; white-space: nowrap;"></th>
                        <th>Id</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.ClientId)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Selected.DepartmentId)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Models != null)
                    {
                        @foreach (var item in Model.Models)
                        {
                    <tr>
                        <td style="width:1px; white-space: nowrap;">
                                @{
                                    string linkEdit = "/Administration/Business/Team/Edit/" + item.Id;
                                    string linkDelete = "/Administration/Business/Team/Delete/" + item.Id;
                                }
                                <a href="@linkEdit"
                                   asp-authorize
                                   asp-policy="Administrator">Edit</a>
                                @if (item.IsDeleted) 
                                { 
                                <span class="text-muted">Is Deleted</span>
                                }
                                else
                                {
                                <a href="@linkDelete"
                                   asp-authorize
                                   asp-policy="Administrator">Delete</a>
                                }
 
                        </td>
                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.Id)"><span class="text-muted">@Html.Raw(item.Id)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.Id)"><span>@Html.Raw(item.Id)</span></td>
                        }
                        @if(item.Client == null)
                        {
                            <td value=""></td>
                        }
                        else
                        {
                            string pathClient = "/Administration/Business/Client/edit/" + item.ClientId;
                            if (item.IsDeleted)
                            {
                            <td> value="@item.Client?.ToString()"<span class="text-muted"><a href="@pathClient">@item.Client?.ToString()</a></span></td>
                            }
                            else
                            {
                            <td value="@item.Client?.ToString()"><a href="@pathClient">@item.Client?.ToString()</a></td>
                            }
                        }

                        @if (item.IsDeleted)
                        {
                        <td value="@Html.Raw(item.Name)"><span class="text-muted">@Html.Raw(item.Name)</span></td>
                        }
                        else
                        {
                        <td value="@Html.Raw(item.Name)"><span>@Html.Raw(item.Name)</span></td>
                        }

                        @if(item.Department == null)
                        {
                            <td value=""></td>
                        }
                        else
                        {
                            string pathDepartment = "/Administration/Business/Department/edit/" + item.DepartmentId;
                            if (item.IsDeleted)
                            {
                            <td> value="@item.Department?.ToString()"<span class="text-muted"><a href="@pathDepartment">@item.Department?.ToString()</a></span></td>
                            }
                            else
                            {
                            <td value="@item.Department?.ToString()"><a href="@pathDepartment">@item.Department?.ToString()</a></td>
                            }
                        }
                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    @if (!ViewContext.ModelState.IsValid)
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    }
    </div>