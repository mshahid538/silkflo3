@model SilkFlo.Web.Models.Business.Comment
<div class="container-fluid">

    <form asp-action="Delete"
          method="post">
        <div class="TitleBar">
            <h2>Delete Comment</h2>

            <h3>Are you sure you?</h3>

            <div class="grid_1fr_auto">
                <div class="toolbar">
                    <!-- Buttons -->
                    <button formaction="/Administration/Business/Comment/Delete"
                            formmethod="post"
                            type="submit"
                            class="btn btn-danger">Delete</button>
                    <button formaction="/Administration/Business/Comment/Cancel"
                            formmethod="post"
                            type="submit"
                            class="btn btn-secondary">Cancel</button>
                </div>

                <div class="toolbar">
                    <a href="/Administration/Business/Comment">Back to List</a>
                </div>
            </div>
        </div>
    @if (!ViewContext.ModelState.IsValid)
    {
        @Html.ValidationSummary(false,
                                "",
                                new { @class = "text-danger" })
    }

        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.CreatedById)
        @Html.HiddenFor(x => x.CreatedDate)
        @Html.HiddenFor(x => x.UpdatedById)
        @Html.HiddenFor(x => x.UpdatedDate)

        @Html.HiddenFor(x => x.ClientId)
        @Html.HiddenFor(x => x.ComponentId)
        @Html.HiddenFor(x => x.IdeaId)
        @Html.HiddenFor(x => x.SenderId)
        @Html.HiddenFor(x => x.Text)
        <div class="grid_auto_1fr">

            <!-- ComponentId -->
            <div>@Html.DisplayNameFor(x => x.ComponentId)</div>
            <div>@Html.DisplayFor(x => x.ComponentId)</div>

            <!-- Text -->
            <div>@Html.DisplayNameFor(x => x.Text)</div>
            <div>@Html.DisplayFor(x => x.Text)</div>

            <!-- ClientString -->
            <div>@Html.DisplayNameFor(x => x.ClientString)</div>
            <div>@Html.DisplayFor(x => x.ClientString)</div>

            <!-- IdeaString -->
            <div>@Html.DisplayNameFor(x => x.IdeaString)</div>
            <div>@Html.DisplayFor(x => x.IdeaString)</div>

            <!-- SenderString -->
            <div>@Html.DisplayNameFor(x => x.SenderString)</div>
            <div>@Html.DisplayFor(x => x.SenderString)</div>

            <!-- CreatedBy -->
            <div>Created By</div>
            <div>@Html.DisplayFor(x => x.CreatedBy)</div>

            <!-- Created Date -->
            <div>@Html.DisplayNameFor(x => x.CreatedDate)</div>
            <div>@Html.DisplayFor(x => x.CreatedDateString)</div>
        </div>
    <h2>Assigned Users</h2>
    <div class="flex_grid">
        @{
            string linkMMUser_For_Recipient = "";
            foreach (var recipient in Model.Recipients)
            {
                 if (recipient != null)
                 {
                    if (recipient.User != null)
                    {
                        linkMMUser_For_Recipient = "/User/Detail/" + recipient.User.Id;
             <a href=@linkMMUser_For_Recipient class="btn btn-secondary">@recipient.User.ToString()</a>
                    }
                }
            }
        }
    </div>
    </form>
</div>