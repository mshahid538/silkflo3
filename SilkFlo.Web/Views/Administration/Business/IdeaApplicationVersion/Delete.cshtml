        @Html.HiddenFor(x => x.IdeaId)
        @Html.HiddenFor(x => x.IsThinClient)
        @Html.HiddenFor(x => x.LanguageId)
        @Html.HiddenFor(x => x.VersionId)
        <div class="grid_auto_1fr">

            <!-- IsThinClient -->
            <div>@Html.DisplayNameFor(x => x.IsThinClient)</div>
            <div>@Html.DisplayFor(x => x.IsThinClient)</div>

            <!-- IdeaString -->
            <div>@Html.DisplayNameFor(x => x.IdeaString)</div>
            <div>@Html.DisplayFor(x => x.IdeaString)</div>

            <!-- LanguageString -->
            <div>@Html.DisplayNameFor(x => x.LanguageString)</div>
            <div>@Html.DisplayFor(x => x.LanguageString)</div>

            <!-- VersionString -->
            <div>@Html.DisplayNameFor(x => x.VersionString)</div>
            <div>@Html.DisplayFor(x => x.VersionString)</div>

            <!-- CreatedBy -->
            <div>Created By</div>
            <div>@Html.DisplayFor(x => x.CreatedBy)</div>

            <!-- Created Date -->
            <div>@Html.DisplayNameFor(x => x.CreatedDate)</div>
            <div>@Html.DisplayFor(x => x.CreatedDateString)</div>
        </div>
