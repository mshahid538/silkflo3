@model SilkFlo.Web.Models.Application.Page
<div class="container-fluid">

    <form asp-action="Delete"
          method="post">
        <div class="TitleBar">
            <h2>Delete Page</h2>

            <h3>Are you sure you?</h3>

            <div class="grid_1fr_auto">
                <div class="toolbar">
                    <!-- Buttons -->
                    <button formaction="/Administration/Application/Page/Delete"
                            formmethod="post"
                            type="submit"
                            class="btn btn-danger">Delete</button>
                    <button formaction="/Administration/Application/Page/Cancel"
                            formmethod="post"
                            type="submit"
                            class="btn btn-secondary">Cancel</button>
                </div>

                <div class="toolbar">
                    <a href="/Administration/Application/Page">Back to List</a>
                </div>
            </div>
        </div>
    @if (!ViewContext.ModelState.IsValid)
    {
        @Html.ValidationSummary(false,
                                "",
                                new { @class = "text-danger" })
    }

        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.CreatedById)
        @Html.HiddenFor(x => x.CreatedDate)
        @Html.HiddenFor(x => x.UpdatedById)
        @Html.HiddenFor(x => x.UpdatedDate)

        @Html.HiddenFor(x => x.CanDelete)
        @Html.HiddenFor(x => x.IsMenuItem)
        @Html.HiddenFor(x => x.Name)
        @Html.HiddenFor(x => x.Sort)
        @Html.HiddenFor(x => x.Text)
        @Html.HiddenFor(x => x.TextHeight)
        @Html.HiddenFor(x => x.URL)
        <div class="grid_auto_1fr">

            <!-- CanDelete -->
            <div>@Html.DisplayNameFor(x => x.CanDelete)</div>
            <div>@Html.DisplayFor(x => x.CanDelete)</div>

            <!-- Sort -->
            <div>@Html.DisplayNameFor(x => x.Sort)</div>
            <div>@Html.DisplayFor(x => x.Sort)</div>

            <!-- Name -->
            <div>@Html.DisplayNameFor(x => x.Name)</div>
            <div>@Html.DisplayFor(x => x.Name)</div>

            <!-- URL -->
            <div>@Html.DisplayNameFor(x => x.URL)</div>
            <div>@Html.DisplayFor(x => x.URL)</div>

            <!-- IsMenuItem -->
            <div>@Html.DisplayNameFor(x => x.IsMenuItem)</div>
            <div>@Html.DisplayFor(x => x.IsMenuItem)</div>

            <!-- Text -->
            <div>@Html.DisplayNameFor(x => x.Text)</div>
            <div>@Html.DisplayFor(x => x.Text)</div>

            <!-- TextHeight -->
            <div>@Html.DisplayNameFor(x => x.TextHeight)</div>
            <div>@Html.DisplayFor(x => x.TextHeight)</div>

            <!-- CreatedBy -->
            <div>Created By</div>
            <div>@Html.DisplayFor(x => x.CreatedBy)</div>

            <!-- Created Date -->
            <div>@Html.DisplayNameFor(x => x.CreatedDate)</div>
            <div>@Html.DisplayFor(x => x.CreatedDateString)</div>
        </div>
    </form>
</div>